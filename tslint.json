{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended",
    "tslint-config-prettier"
  ],
  "jsRules": {
    "no-unused-expression": true
  },
  "rules": {
    "quotemark": [
      true,
      "single"
    ],
    "prefer-for-of": true,
    "await-promise": true,
    "member-access": [
      false
    ],
    "ordered-imports": {
      "options": {
        "module-source-path": "full",
        "grouped-imports": true,
        "import-sources-order": "any"
      }
    },
    "max-line-length": {
      "severity": "default",
      "options": {
        "limit": 150
      }
    },
    "no-var-keyword": {
      "severity": "error"
    },
    "deprecation": {
      "severity": "warning"
    },
    "newline-before-return": true,
    "import-spacing": {
      "severity": "error"
    },
    "interface-name": [
      false
    ],
    "arrow-parens": false,
    "object-literal-sort-keys": false,
    "prefer-const": {
      "severity": "default",
      "options": {
        "destructuring": "all"
      }
    },
    "space-within-parens": true,
    "no-for-in-array": true,
    "no-unnecessary-class": true,
    "no-trailing-whitespace": true,
    "trailing-comma": true,
    "no-duplicate-imports": true
  },
  "rulesDirectory": []
}
